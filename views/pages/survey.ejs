<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head.ejs") %>
    <title><%= survey.name %></title>
    <script></script>
  </head>
  <div class="container">
    <h1><%= survey.name %></h1>
    <h4><%= survey.description %></h4>
    <style>
      [type="radio"] {
        position: absolute;
        opacity: 0;
        width: 0;
        height: 0;
      }

      /* IMAGE STYLES */
      [type="radio"] + a {
        cursor: pointer;
      }

      /* CHECKED STYLES */
      [type="radio"]:checked + a {
        outline: 2px solid rgb(115, 3, 180);
      }

      form div input {
        visibility: hidden;
      }
    </style>

    <form action="/" method="POST">
      <input name="surveyId" hidden value="<%= survey._id %>" />
      <input name="inviteId" hidden value="<%= invite._id %>" />

      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Frage</th>
            <th class="th.sm">👍</th>
            <th class="th.sm">👌</th>
            <th class="th.sm">👎</th>
          </tr>
        </thead>
        <tbody>
          <% survey.fields.forEach(field => { %>
          <tr>
            <td>
              <a><%= field.text %></a>
            </td>
            <td>
              <div>
                <label>
                  <input type="radio" name="<%= field._id %>" value="happy" />
                  <a>
                    👍
                  </a>
                </label>
              </div>
            </td>
            <td>
              <div>
                <label>
                  <input type="radio" name="<%= field._id %>" value="okay" />
                  <a>
                    👌
                  </a>
                </label>
              </div>
            </td>
            <td>
              <div>
                <label>
                  <input type="radio" name="<%= field._id %>" value="sad" />
                  <a>
                    👎
                  </a>
                </label>
              </div>
            </td>
          </tr>
          <% }) %>
          <tr>
            <td>Eine Anmerkung?: <input type="text" name="comment" /></td>
          </tr>
        </tbody>
      </table>

      <button type="submit">Absenden</button>
    </form>
  </div>
</html>
