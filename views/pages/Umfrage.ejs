<div class="container">
  <h1>Umfrage</h1>
  <style>
    [type="radio"] {
      position: absolute;
      opacity: 0;
      width: 0;
      height: 0;
    }
    /* IMAGE STYLES */
    [type="radio"] + a {
      cursor: pointer;
    }

    /* CHECKED STYLES */
    [type="radio"]:checked + a {
      outline: 2px solid #f00;
    }
    form div input {
      visibility: hidden;
    }
  </style>

  <form action="/" method="POST">
    <input type="text" id="token" readonly value="<%= token %>" />
    <input type="text" id="objectid" readonly value="<%= objectid %>" />
    <div class="">
      <label>
        <input
          class="hidden"
          type="radio"
          name="inlineRadioOptions"
          id="inlineRadio1"
          value="happy"
        />
        <a>
          👍
        </a>
      </label>
    </div>
    <div class="">
        <label>
        <input
          class="hidden"
          type="radio"
          name="inlineRadioOptions"
          id="inlineRadio2"
          value="sad"
        />
        <a>
          👎
        </a>
      </label>
      <input
        class="form-check-input"
        type="radio"
        name="inlineRadioOptions"
        id="inlineRadio2"
        value="sad"
      />
      <label class="form-check-label" for="inlineRadio2"></label>
    </div>
    <div class="">
      <input
        class="form-check-input"
        type="radio"
        name="inlineRadioOptions"
        id="inlineRadio3"
        value="ok"
      />
      <label class="" for="inlineRadio3">👌</label>
    </div>
    <button type="submit">Submit</button>
  </form>
</div>
